    <script>
        elements = document.getElementsByName("table-row");
        
        elements.forEach(element => {
            element.addEventListener("click", function(){
                if(!element.classList.contains("table-active")){
                    element.classList.add("table-active");

                    elements.forEach(element2 => {
                        if(element != element2){
                            if(element.classList.contains("table-active")){
                                element2.classList.remove("table-active");
                            }
                        }
                    });
                    docName = element.children[0].innerHTML;
                    owner = element.children[1].innerHTML;

                    var formData = {
                        name: docName,
                        owner: owner
                    }
                    
                    $.ajax({
                        type : "POST",
                        contentType : "application/json",
                        url : window.location + "/edit",
                        data : JSON.stringify(formData),
                        dataType : 'json',
                        success : function(user) {
                            console.log("Document found");
                            console.log(user);
                            window.location.href = "/doc";
                        },
                        error : function(e) { 
                            console.log(e);  
                        }
                    });
                }
            });
        });
