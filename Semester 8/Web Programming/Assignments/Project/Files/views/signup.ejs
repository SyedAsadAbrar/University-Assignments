    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">

</head>
<body>
    <div id= "reg_alert" class="toast" data-autohide="false" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <span class= "my-2"><strong>User registration successful!</strong> Redirecting to sign in page.</span>
            <button type="button" class="my-2 ml-1 close" data-dismiss="toast" aria-label="Close" onclick="window.location.href='/signin'">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
    <div class="container text-center">
        <div class="container pb-4 pl-4 pr-4" id="login_container">
            <form id = "signup-form" action="" method="post" novalidate>
                <a href="#">
                    <img class="logo mt-5 mb-4" src="../static/images/logo.svg" height="60" alt="Documents.">
                </a>
                <div class="form-row mt-3 mb-4">
                    <!-- <label for="email_input">Email address</label> -->
                    <input name = "fullName" type="text" class="form-control valid" id="name_input" placeholder="Full Name">
                    <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
                </div>

                <div class="form-row form-alert valid ml-2" id = "name_alert">
                    text text text text text text text text text text text text 
                </div>

                <div class="form-row mb-4">
                    <!-- <label for="email_input">Email address</label> -->
                    <input name = "email" type="email" class="form-control valid" id="email_input" placeholder="Email address">
                    <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
                </div>

                <div class="form-row form-alert valid ml-2" id = "email_alert">
                    text text text text text text text text text text text text 
                </div>

                <div class="form-row mb-4">
                    <!-- <label for="exampleInputPassword1">Password</label> -->
                    <input name = "password" type="password" class="form-control valid" placeholder="Password" id="pass_input">
                </div>

                <div class="form-row form-alert valid ml-2" id = "pass_alert">
                    text text text text text text text text text text text text 
                </div>

                <div class="form-row mb-4">
                    <!-- <label for="exampleInputPassword1">Password</label> -->
                    <input type="password" class="form-control valid" placeholder="Confirm Password" id="pass-confirm_input">
                </div>

                <div class="form-row form-alert valid ml-2" id = "pass-confirm_alert">
                    text text text text text text text text text text text text 
                </div>

                <button type="submit" class="btn mt-2 mb-3">Sign Up</button>
            </form>

            <hr>

            <small id="signinHelp" class="form-text text-muted text-md-center">
                <a href="signin">
                    Already a member? <b>Sign In.</b>
                </a>
            </small>
        </div>
        <p class="mt-2" id="copyright_text">Â© 2020-2021</p>
    </div>

    <!-- JS files: jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script type="text/javascript">
        var form = document.getElementById("signup-form");
        
        form.onsubmit = function()
        {
            var result = true;

            var name = document.getElementById("name_input");
            var email = document.getElementById("email_input");
            var password = document.getElementById("pass_input");
            var confPassword = document.getElementById("pass-confirm_input");

            var nameAlert = document.getElementById("name_alert");
            var emailAlert = document.getElementById("email_alert");
            var passwordAlert = document.getElementById("pass_alert");
            var confPasswordAlert = document.getElementById("pass-confirm_alert");

            var emailMatch = /[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?/;

            if (name.value == ""){
                makeInvalid(name, nameAlert, "Name field cannot be empty");
                result = false;
            }
            else{
                makeValid(name, nameAlert);
            }

            if (email.value == ""){
                makeInvalid(email, emailAlert, "Email field cannot be empty");
                result = false;
            }
            else{
                makeValid(email, emailAlert);
                if(emailMatch.test(email.value) == false){
                    makeInvalid(email, emailAlert, "Entered Email address is invalid");
                    result = false;
                }
            }

            if (password.value == ""){
                makeInvalid(password, passwordAlert, "Password field cannot be empty");
                result = false;
            }
            else{
                makeValid(password, passwordAlert);
                if(password.value.length < 7){
                    makeInvalid(password, passwordAlert, "Password must be at least 7 characters");
                    result = false;
                }
            }

            if (confPassword.value == ""){
                makeInvalid(confPassword, confPasswordAlert, "Confirm Password field cannot be empty");
                result = false;
            }
            else{
                makeValid(confPassword, confPasswordAlert);
                if(password.value.length < 7){
                    makeInvalid(confPassword, confPasswordAlert, "Password must be at least 7 characters");
                    result = false;
                }
                if(password.value != confPassword.value){
                    makeInvalid(confPassword, confPasswordAlert, "Passwords do not match");
                    result = false;
                }
                else{
                    makeValid(confPassword, confPasswordAlert);
                }
            }

            return result;
        };

        var makeInvalid = function(input, alert, string){
            if(input.parentElement.classList.contains("mb-4")){
                input.parentElement.classList.remove("mb-4");
            }
            if(input.classList.contains("valid")){
                input.classList.remove("valid");
            }
            input.classList.add("invalid");
            alert.innerHTML = string;
            alert.style.display = "flex";
            if(alert.classList.contains("valid")){
                alert.classList.remove("valid");
            }
            alert.classList.add("invalid");
        }

        var makeValid = function(input, alert){
            if(input.parentElement.classList.contains("mb-4")){
                input.parentElement.classList.remove("mb-4");
            }
            if(input.classList.contains("invalid")){
                input.classList.remove("invalid");
            }
            input.classList.add("valid");
            alert.innerHTML = "Looks good!";
            alert.style.display = "flex";
            if(alert.classList.contains("invalid")){
                alert.classList.remove("invalid");
            }
            alert.classList.add("valid");
        }

    </script>

    <!-- Ajax call -->
    <script>
        $(document).ready(function() {
  
        // SUBMIT FORM
        $("#signup-form").submit(function(event) {
            // Prevent the form from submitting via the browser.
            event.preventDefault();
            ajaxPost();
        });
        
        
        function ajaxPost(){
            var formData = {
                fullName : $("#name_input").val(),
                email :  $("#email_input").val(),
                password : $("#pass_input").val(),
                confPassword : $("#pass-confirm_input").val()
            }
            
            // DO POST
            $.ajax({
                type : "POST",
                contentType : "application/json",
                url : window.location + "",
                data : JSON.stringify(formData),
                dataType : 'json',
                success : function(user) {
                    console.log("User registration successful.");
                    $("#reg_alert").toast('show');
                    window.location.href = "/signin";
                },
                error : function(e) {
                    //alert("Error!")
                    //console.log("ERROR: ", e);
                    
                    var error = e.responseJSON.message;
                    
                    if (error == "Email address is currently in use"){
                        $("#email_alert").html(error);
                        $("#email_input").removeClass("valid");
                        $("#email_input").addClass("invalid");
                        $("#email_alert").removeClass("valid");
                        $("#email_alert").addClass("invalid");
                    }
                    else{
                        console.log(e);
                    }
                }
            });    
        }
    })
    </script>

</body>
</html>